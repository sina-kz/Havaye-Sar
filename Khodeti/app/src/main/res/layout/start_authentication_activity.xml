<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#fcf0f2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingTop="100dp"
            android:text="خودتی؟"
            android:textColor="#132822"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/start_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="#132822"
            android:textSize="18dp"
            android:text="سازمان یا شرکتی که می‌خواهید در آن احراز هویت انجام دهید را انتخاب کنید سپس کد رهگیری را که از آن سازمان بعد از ثبت‌نام دریافت کردید وارد کنید." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:gravity="left"
                android:layout_weight="0"
                android:text="نام سازمان" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/company_token"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="894817460749203960178401"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:gravity="left"
                android:layout_weight="0"
                android:text="کد رهگیری" />


        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/round_button"
            android:textColor="#ebdfe0"
            android:layout_gravity="center"
            android:text="تایید" />

    </LinearLayout>
</LinearLayout>